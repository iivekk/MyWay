<?xml version ="1.0" encoding ="utf-8"?><!--  Learn More about how to use App Actions: https://developer.android.com/guide/actions/index.html -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/sound_on_off"
        android:summaryOff="@string/sound_off"
        android:summaryOn="@string/sound_on"
        android:title="@string/sound_settings" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/vibration_on_off"
        android:summaryOff="@string/vibrations_off"
        android:summaryOn="@string/vibrations_on"
        android:title="@string/vibration_settings" />
    <Preference
        android:key="@string/clear_data_key"
        android:summary="@string/clear_list_summary"
        android:title="@string/clear_data" />
</PreferenceScreen>
